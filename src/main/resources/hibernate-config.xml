<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Show and print SQL on stdout -->
		<property name="hibernate.dialect">${hibernate.dialect}</property>
		<property name="hibernate.show_sql">${hibernate.show_sql}</property>
		<property name="hibernate.format_sql">${hibernate.format_sql}</property>
		<property name="hibernate.use_sql_comments">${hibernate.use_sql_comments}</property>

		<!-- List of persistent classes -->
		<mapping class="es.smartweekend.web.backend.model.adress.Adress" />
		<mapping class="es.smartweekend.web.backend.model.emailTemplate.EmailTemplate" />
		<mapping class="es.smartweekend.web.backend.model.user.User" />
		<mapping class="es.smartweekend.web.backend.model.newsItem.NewsItem" />
		<mapping class="es.smartweekend.web.backend.model.sponsor.Sponsor" />
		<mapping class="es.smartweekend.web.backend.model.event.Event" />

	</session-factory>

</hibernate-configuration>
